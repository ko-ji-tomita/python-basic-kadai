      "source": [
        "#商品に消費税を加えた関数を定義する\n",
        "def add_two_tax(price, tax):\n",
        "\n",
        "  #与えられた引数に消費税を加算する\n",
        "  total = price * (1 + tax / 100)\n",
        "\n",
        "  #計算結果を戻り値として返す\n",
        "  return total\n",
        "\n",
        "#関数を呼び出し、引数として購入金額と消費税を渡す\n",
        "result = add_two_tax(1000, 10)\n",
        "\n",
        "#戻り値を出力する\n",
        "print(f\"{result}円\")\n"
      ]
    }
